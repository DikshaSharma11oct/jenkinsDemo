pipeline{
    agent any
    stages{
        stage("compile"){
            steps{
                sh "javac Student.java"
            }
        }
        stage("run"){
            steps{
                sh "java Student"
            }
        }
    }
 //can add some comments after deploying project successfully on jenkins in post
    post{
        always{
            sh 'echo "always"'

        }
        success{
            sh 'echo "success"'

        }
        failure{
            sh 'echo "failure"'
        }
    }
}
